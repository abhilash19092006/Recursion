package Recursion;

public class KthSymbolGrammar {
	public static int solve(int n,int k,int current) {
		if(n==1)
			return current;
		int mid=(int)Math.powExact(2, n-1)/2;
		if(current==0) {
			if(k>mid)
				return solve(n-1,k-mid,1);
			else
				return solve(n-1,k,0);
			
		}else {
			if(k>mid)
				return solve(n-1,k-mid,0);
			else
				return solve(n-1,k,1);
		}
	}

	public static int Kthgrammer(int n,int k) {
		
		return solve(n,k,0);
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int value=Kthgrammer(2,2);
		System.out.println(value);

	}

}
